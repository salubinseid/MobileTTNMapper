<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="30dp"
        android:textSize="20dp"
        android:text="@string/app_name"/>

    <CheckBox
        android:id="@+id/chk_gps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make sure GPS ON"/>

    <CheckBox
        android:id="@+id/chk_wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make sure mobile connected to Pycom LOPY WIFI"/>

    <CheckBox
        android:id="@+id/chk_mqtt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make sure MQTT broker is running in your mobile"/>

    <Button
        android:id="@+id/btn_connect"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Connect to LoRA"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="381dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:id="@+id/wifiConStatus"
        android:text="Status"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:id="@+id/response"
        android:text="Status"></TextView>

    <Button
        android:id="@+id/relay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Connect to LoRA"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="381dp" />

    <Button
        android:id="@+id/switchlight"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Connect to LoRA"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="381dp" />


</LinearLayout>